  <div class="column is-half">
    <p class="bd-notification is-primary">
      <h1>Login</h1>
     <%= form_tag '/login' do %> 
      <div class="form-inputs">
        <div class="field">
       
          <label class="label">Username</label>
        <%= text_field_tag :username %>
        </div>
      </div>
      
        <p class="help">Try 'maru'</p>
      <%= submit_tag "Sign in" , class: "button is-primary"%>
     
      <% end %>
    </p>
  </div>
</div>


      
    

  

  
    